@page
@model VendingMachines.Web.Pages.Authorization.AuthModel
@{
    ViewData["Title"] = "Вход в систему";
}

<div class="d-flex align-items-center justify-content-center bg-white" style="min-height: calc(100vh - 120px); padding: 20px 15px;">
    <div class="card shadow-lg border-0 rounded-4" style="max-width: 420px; width: 100%;">
        <div class="card-body p-5">
            <h2 class="text-center mb-5 fw-bold text-dark" style="font-size: 28px;">Вход в систему</h2>

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger text-center mb-4 rounded">
                    @Model.ErrorMessage
                </div>
            }

            <form method="post">
                <div class="mb-4">
                    <label asp-for="Email" class="form-label fw-medium">Email</label>
                    <input asp-for="Email" class="form-control form-control-lg rounded-3"
                           style="background-color: #f8f9fa; border: 2px solid #e1e5e9;"
                           placeholder="example@mail.com" />
                    <span asp-validation-for="Email" class="text-danger small d-block mt-1"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Password" class="form-label fw-medium">Пароль</label>
                    <input asp-for="Password" type="password" class="form-control form-control-lg rounded-3"
                           style="background-color: #f8f9fa; border: 2px solid #e1e5e9;"
                           placeholder="••••••••" />
                    <span asp-validation-for="Password" class="text-danger small d-block mt-1"></span>
                </div>

                <div class="d-grid gap-3 mt-4">
                    <button type="submit" asp-page-handler="Login"
                            class="btn btn-primary btn-lg rounded-3 shadow-sm fw-semibold"
                            style="background: linear-gradient(135deg, #667eea, #764ba2); border: none;">
                        Войти
                    </button>
                    <button type="submit" asp-page-handler="Register"
                            class="btn btn-outline-secondary btn-lg rounded-3 fw-semibold">
                        Зарегистрироваться
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    html, body {
        height: 100%;
        margin: 0;
        overflow: hidden;
    }

    .guest-content {
        padding: 0 !important;
        overflow: hidden !important;
        background-color: transparent !important;
    }

    .form-control {
        transition: all 0.3s ease;
    }

        .form-control:focus {
            border-color: #667eea !important;
            background-color: white !important;
            box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.15);
        }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 25px rgba(102, 126, 234, 0.3);
    }

    .btn-outline-secondary:hover {
        background-color: #e9ecef !important;
        transform: translateY(-2px);
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}