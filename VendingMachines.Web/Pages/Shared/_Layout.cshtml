<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VendingMachines.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/VendingMachines.Web.styles.css" asp-append-version="true" />
    <style>
        html, body {
            height: 100%;
            margin: 0;
            overflow: hidden;
        }

        body {
            display: flex;
            flex-direction: column;
        }

        header {
            flex-shrink: 0;
            z-index: 1030;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }

        .content-wrapper {
            flex: 1 1 auto;
            display: flex;
            overflow: hidden;
        }

        .sidebar {
            width: 220px;
            background-color: #343a40;
            color: white;
            overflow-y: auto;
            padding-bottom: 20px;
        }

            .sidebar a {
                color: white;
                text-decoration: none;
                display: block;
                padding: 12px 20px;
                transition: background 0.2s;
            }

                .sidebar a:hover {
                    background-color: #495057;
                }

            .sidebar .dropdown-menu {
                background-color: #495057;
            }

            .sidebar .dropdown-item {
                color: white;
            }

                .sidebar .dropdown-item:hover {
                    background-color: #5a6268;
                }

        .main-content {
            flex: 1 1 auto;
            overflow-y: auto;
            background-color: #f8f9fa;
            padding: 20px;
        }

        footer {
            flex-shrink: 0;
            background-color: #f8f9fa;
            border-top: 1px solid #dee2e6;
            padding: 15px 0;
            text-align: center;
            font-size: 0.9rem;
        }

        .guest-content {
            flex: 1 1 auto;
            overflow-y: auto;
            padding: 20px;
        }
    </style>
</head>
<body>
    <header class="navbar navbar-expand-sm navbar-light bg-white border-bottom">
        <div class="container-fluid">
            <label class="navbar-brand fw-bold">ООО "Торговые автоматы"</label>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                @if (string.IsNullOrEmpty(Context.Session.GetString("jwt_token")))
                {
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Authorization/Auth">Войти в систему</a>
                        </li>
                    </ul>
                }
                else
                {
                    <div class="dropdown ms-auto">
                        <a class="d-flex align-items-center text-dark text-decoration-none dropdown-toggle"
                           href="#" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="~/resources/RussiaFlag.png" alt="RU" width="28" height="28" class="rounded me-2">
                            <div class="text-start">
                                <div class="fw-medium">@Context.Session.GetString("user_name")</div>
                                <small class="text-muted">@Context.Session.GetString("user_role")</small>
                            </div>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="userDropdown">
                            <li><a class="dropdown-item" asp-page="/Account/Profile">Мой профиль</a></li>
                            <li><a class="dropdown-item" asp-page="/Account/Sessions">Мои сессии</a></li>
                            <li><hr class="dropdown-divider" /></li>
                            <li>
                                <form method="post" asp-page-handler="Logout" class="d-inline">
                                    <button type="submit" class="dropdown-item text-danger">Выход</button>
                                </form>
                            </li>
                        </ul>
                    </div>
                }
            </div>
        </div>
    </header>

    @if (!string.IsNullOrEmpty(Context.Session.GetString("jwt_token")))
    {
        <div class="content-wrapper">
            <nav class="sidebar">
                <div class="p-4 border-bottom">
                    <h5 class="mb-0 text-white">Навигация</h5>
                </div>
                <a asp-page="/Account/Profile">Главная</a>
                <a asp-page="/Account/VendingMachinesTA">ТА</a>
                <a asp-page="/Account/MaintenanceCalendar">Календарь обслуживания</a>
                <a asp-page="/Account/WorkSchedule">График работ</a>

                @if (Context.Session.GetString("user_role") == "Администратор")
                {
                    <div class="dropdown">
                        <a class="dropdown-toggle px-3 py-2" href="#" role="button" data-bs-toggle="dropdown">
                            Администрирование
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-page="/Account/Admin/VendingMachines">Торговые автоматы</a></li>
                            <li><a class="dropdown-item" asp-page="/Account/Admin/Companies">Компании</a></li>
                            <li><a class="dropdown-item" asp-page="/Account/Admin/Users">Пользователи</a></li>
                            <li><a class="dropdown-item" asp-page="/Account/Admin/Modems">Модемы</a></li>
                            <li><a class="dropdown-item" asp-page="/Account/Admin/Additional">Дополнительные</a></li>
                        </ul>
                    </div>
                }
            </nav>

            <main class="main-content">
                @RenderBody()
            </main>
        </div>
    }
    else
    {
        <main class="guest-content bg-light">
            @RenderBody()
        </main>
    }

    <footer>
        <div class="container">
            &copy; @DateTime.Now.Year - ООО "Торговые автоматы"
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>