<Page x:Class="VendingMachines.Desktop.Account.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:VendingMachines.Desktop.Account.Pages"
      xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      mc:Ignorable="d"
      d:DesignHeight="550" d:DesignWidth="800"
      Title="MainPage">
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Label Content="Личный кабинет. Главная" FontSize="18" 
               Grid.Row="0"/>
        
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <Grid Grid.Column="0" Margin="10 0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.3*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Background="Gainsboro" Grid.Row="0">
                        <Label Content="Эффективность сети" Margin="10 0" 
                               FontSize="15"/>
                    </StackPanel>
                    
                    <StackPanel Background="White" Grid.Row="1">
                        <lvc:Gauge x:Name="EfficiencyGauge" From="0" 
                                   To="100" Foreground="Black" 
                                   Margin="0 5" Width="150" Height="100"/>
                    </StackPanel>
                </Grid>
                
                <Grid Grid.Column="1" Margin="10 0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.3*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Background="Gainsboro" Grid.Row="0">
                        <Label Content="Состояние сети" Margin="10 0" 
                               FontSize="15"/>
                    </StackPanel>
                    
                    <StackPanel Background="White" Grid.Row="1">
                        <lvc:PieChart x:Name="NetworkStatusChart" 
                                      Width="150" Height="100" Margin="0 10" 
                                      InnerRadius="40">
                            <lvc:PieChart.Series>
                                <lvc:PieSeries Title="Активен" 
                                               Fill="#00FF00"/>
                                <lvc:PieSeries Title="Неактивен" 
                                               Fill="#FF0000"/>
                            </lvc:PieChart.Series>
                        </lvc:PieChart>
                    </StackPanel>
                </Grid>
                
                <Grid Grid.Column="2" Margin="10 0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.3*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Background="Gainsboro" Grid.Row="0">
                        <Label Content="Сводка" Margin="10 0" FontSize="15"/>
                    </StackPanel>
                    
                    <StackPanel Background="White" Grid.Row="1">
                        <Grid Margin="5 2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.8*"/>
                                <ColumnDefinition Width="0.3*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Orientation="Vertical" 
                                        Grid.Column="0">
                                <TextBlock Text="Денег в ТА:" FontSize="10"/>
                                <TextBlock Text="Сдача в ТА:" FontSize="10"/>
                                <TextBlock Text="Выручка, сегодня:" 
                                           FontSize="10"/>
                                <TextBlock Text="Выручка, вчера:" 
                                           FontSize="10"/>
                                <TextBlock Text="Инкассировано, сегодня:" 
                                           FontSize="10"/>
                                <TextBlock Text="Инкассировано, вчера:" 
                                           FontSize="10"/>
                                <TextBlock Text="Ослужено ТА, сег./вчера:"
                                           FontSize="10"/>
                            </StackPanel>
                            <StackPanel x:Name="SummaryPanel" 
                                        Orientation="Vertical" 
                                        Grid.Column="1">
                                <TextBlock x:Name="MoneyInTA" 
                                           TextAlignment="Right" 
                                           FontSize="10"/>
                                <TextBlock x:Name="ChangeInTA" 
                                           TextAlignment="Right" 
                                           FontSize="10"/>
                                <TextBlock x:Name="RevenueToday" 
                                           TextAlignment="Right" 
                                           FontSize="10"/>
                                <TextBlock x:Name="RevenueYesterday" 
                                           TextAlignment="Right" 
                                           FontSize="10"/>
                                <TextBlock x:Name="CollectedToday" 
                                           TextAlignment="Right" 
                                           FontSize="10"/>
                                <TextBlock x:Name="CollectedYesterday"
                                           TextAlignment="Right"
                                           FontSize="10"/>
                                <TextBlock x:Name="Serviced" 
                                           TextAlignment="Right" 
                                           FontSize="10"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Grid>
            </Grid>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <Grid Grid.Column="0" Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.55*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Background="Gainsboro" Grid.Row="0">
                        <Label Content="Динамика продаж за последние 10 дней" 
                               FontSize="15" Margin="10 0"/>
                        <Label Content="Данные по продажам с 01.03.2025 по 10.03.2025" 
                               FontSize="11" Margin="10 0"/>
                        
                        <StackPanel Orientation="Horizontal" Margin="10 0">
                            <Button x:Name="ByAmountButton" 
                                    Content="По сумме" Height="25" 
                                    FontSize="13" Background="Blue" 
                                    Foreground="White" Width="120" 
                                    Click="ByAmountButton_Click"/>
                            <Button x:Name="ByQuantityButton" 
                                    Content="По количеству" Height="25" 
                                    FontSize="13" Background="White" 
                                    Margin="10 0" Width="120" 
                                    Click="ByQuantityButton_Click"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <StackPanel Background="White" Grid.Row="1">
                        <lvc:CartesianChart x:Name="SalesChart" Height="180"
                                            Margin="5">
                            <lvc:CartesianChart.Series>
                                <lvc:ColumnSeries Title="Продажи"/>
                            </lvc:CartesianChart.Series>
                            <lvc:CartesianChart.AxisX>
                                <lvc:Axis x:Name="SalesAxisX"/>
                            </lvc:CartesianChart.AxisX>
                            <lvc:CartesianChart.AxisY>
                                <lvc:Axis/>
                            </lvc:CartesianChart.AxisY>
                        </lvc:CartesianChart>
                    </StackPanel>
                </Grid>
                
                <Grid Grid.Column="1" Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.15*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Background="Gainsboro" Grid.Row="0">
                        <Label Content="Новости" Margin="10 0" FontSize="15"/>
                    </StackPanel>

                    <StackPanel Background="White" Grid.Row="1">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" 
                                      Height="250">
                            <ItemsControl x:Name="NotificationsList">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Margin="10 5">
                                            <TextBlock Text="{Binding DateTime, StringFormat='{}{0:dd.MM.yyyy HH:mm}'}"
                                                       FontWeight="Bold"
                                                       FontSize="10"/>
                                            <TextBlock Text="{Binding Message}" 
                                                       TextWrapping="Wrap"
                                                       FontSize="10"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Page>
