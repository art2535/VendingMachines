<Page x:Class="VendingMachines.Desktop.Account.Pages.AddVendingMachinePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VendingMachines.Desktop.Account.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="800"
      Loaded="Page_Loaded"
      Title="AddVendingMachinePage">
    
    <Page.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Height" Value="19"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="FontSize" Value="11"/>
        </Style>
    </Page.Resources>

    <Grid Margin="100 0" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.1*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Создание торгового автомата" 
                   Grid.Row="0" Foreground="Blue"
                   FontSize="18" Margin="10 5"
                   TextAlignment="Left"
                   x:Name="InfoTextBlock"/>

        <StackPanel Orientation="Vertical" Grid.Row="1"
                    Margin="5">
            <StackPanel Orientation="Horizontal">
                <StackPanel Orientation="Vertical"
                            Width="160" Margin="5 0 0 0">
                    <TextBlock Text="Название ТА *"/>
                    <TextBox x:Name="MachineNametextBox"/>
                </StackPanel>
                <StackPanel Orientation="Vertical"
                            Margin="45 0 0 0" Width="160">
                    <TextBlock Text="Производитель ТА *"/>
                    <ComboBox x:Name="MachineManufacturerComboBox"/>
                </StackPanel>
                <StackPanel Orientation="Vertical"
                            Margin="45 0 0 0" Width="160">
                    <TextBlock Text="Модель ТА *"/>
                    <ComboBox x:Name="ModelComboBox"/>
                </StackPanel>
            </StackPanel>

            <StackPanel Orientation="Horizontal" 
                        Margin="0 10 0 0">
                <StackPanel Orientation="Vertical"
                            Width="160" Margin="5 0">
                    <TextBlock Text="Режим работы *"/>
                    <ComboBox x:Name="OperatingModeComboBox"/>
                </StackPanel>
                <StackPanel Orientation="Vertical"
                            Margin="40 0 0 0" Width="160">
                    <TextBlock Text="Производитель ТА (Slave) *"/>
                    <TextBox x:Name="MachineSlaveManufacturerTextBox"
                             Text="-" IsEnabled="False"/>
                </StackPanel>
                <StackPanel Orientation="Vertical"
                            Margin="45 0 0 0" Width="160">
                    <TextBlock Text="Модель ТА (Slave) *"/>
                    <TextBox x:Name="MachineSlaveModelTextBox"
                             Text="-" IsEnabled="False"/>
                </StackPanel>
            </StackPanel>

            <StackPanel Orientation="Horizontal"
                        Margin="0 10 0 0">
                <StackPanel Orientation="Vertical"
                            Width="160" Margin="5 0">
                    <TextBlock Text="Адрес *"/>
                    <TextBox x:Name="AddressTextBox"/>
                </StackPanel>
                <StackPanel Orientation="Vertical"
                            Width="160" Margin="40 0 0 0">
                    <TextBlock Text="Место *"/>
                    <TextBox x:Name="PlaceTextBox"/>
                </StackPanel>
                <StackPanel Orientation="Vertical"
                            Width="160" Margin="45 0 0 0">
                    <TextBlock Text="Координаты"/>
                    <TextBox x:Name="CoordinatesTextBox"/>
                </StackPanel>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal"
                        Margin="0 10 0 0">
                <StackPanel Orientation="Vertical"
                            Width="160" Margin="5 0">
                    <TextBlock Text="Номер автомата *"/>
                    <TextBox x:Name="MachineNumberTextBox"/>
                </StackPanel>
                <StackPanel Orientation="Vertical"
                            Width="160" Margin="40 0 0 0">
                    <TextBlock Text="Время работы (08:00-22:00)"/>
                    <TextBox x:Name="TimeWorkTextBox"/>
                </StackPanel>
                <StackPanel Orientation="Vertical"
                            Width="160" Margin="45 0 0 0">
                    <TextBlock Text="Часовой пояс *"/>
                    <ComboBox x:Name="TimeZoneComboBox"/>
                </StackPanel>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal"
                        Margin="0 10 0 0">
                <StackPanel Orientation="Vertical"
                            Width="160" Margin="5 0">
                    <TextBlock Text="Товарная матрица *"/>
                    <ComboBox x:Name="MatrixComboBox"/>
                </StackPanel>
                <StackPanel Orientation="Vertical"
                            Width="160" Margin="40 0 0 0">
                    <TextBlock Text="Шаблон крит.значений"/>
                    <ComboBox x:Name="CriticalValuesComboBox"/>
                </StackPanel>
                <StackPanel Orientation="Vertical"
                            Width="160" Margin="45 0 0 0">
                    <TextBlock Text="Шаблон уведомлений"/>
                    <ComboBox x:Name="NotificationComboBox"/>
                </StackPanel>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal"
                        Margin="0 10 0 0">
                <StackPanel Orientation="Vertical"
                            Width="160" Margin="5 0">
                    <TextBlock Text="Клиент"/>
                    <ComboBox x:Name="ClientComboBox"/>
                </StackPanel>
                <StackPanel Orientation="Vertical"
                            Width="160" Margin="40 0 0 0">
                    <TextBlock Text="Менеджер"/>
                    <ComboBox x:Name="MenegerComboBox"/>
                </StackPanel>
                <StackPanel Orientation="Vertical"
                            Width="160" Margin="45 0 0 0">
                    <TextBlock Text="Инженер"/>
                    <ComboBox x:Name="EngineerComboBox"/>
                </StackPanel>
            </StackPanel>

            <StackPanel Orientation="Horizontal"
                        Margin="0 10 0 0">
                <StackPanel Orientation="Vertical"
                            Width="160" Margin="5 0">
                    <TextBlock Text="Техник-оператор"/>
                    <ComboBox x:Name="OperatorComboBox"/>
                </StackPanel>
                <StackPanel Orientation="Vertical"
                            Width="365" Margin="40 0 0 0">
                    <TextBlock Text="Платежные системы *"/>
                    <StackPanel Orientation="Horizontal"
                                Margin="0 5 0 0">
                        <CheckBox Content="Монетопр."
                                  x:Name="MonetoCheckBox"/>
                        <CheckBox Content="Купюропр."
                                  Margin="10 0 0 0"
                                  x:Name="CupuroCheckBox"/>
                        <CheckBox Content="Модуль б/н опл."
                                  Margin="10 0 0 0"
                                  x:Name="ModuleCheckBox"/>
                        <CheckBox Content="QR-платежи"
                                  Margin="10 0 0 0"
                                  x:Name="QrCheckBox"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>

            <StackPanel Orientation="Horizontal"
                        Margin="0 10 0 0">
                <StackPanel Orientation="Vertical"
                            Width="160" Margin="5 0">
                    <TextBlock Text="RFID карты обслуживания"/>
                    <TextBox x:Name="ServiceCardTextBox"/>
                </StackPanel>
                <StackPanel Orientation="Vertical"
                            Width="160" Margin="40 0 0 0">
                    <TextBlock Text="RFID карты инкассации"/>
                    <TextBox x:Name="CollectionCardTextBox"/>
                </StackPanel>
                <StackPanel Orientation="Vertical"
                            Width="160" Margin="45 0 0 0">
                    <TextBlock Text="RFID карты загрузки"/>
                    <TextBox x:Name="DownloadCardTextBox"/>
                </StackPanel>
            </StackPanel>

            <StackPanel Orientation="Horizontal"
                        Margin="0 10 0 0">
                <StackPanel Orientation="Vertical"
                            Width="160" Margin="5 0">
                    <TextBlock Text="Id кассы kit Online (только в случае жесткой привязки)"/>
                    <TextBox x:Name="TicketOfficeTextBox"/>
                </StackPanel>
                <StackPanel Orientation="Vertical"
                            Width="160" Margin="40 0 0 0">
                    <TextBlock Text="Приоритет обслуживания *"/>
                    <TextBox x:Name="PriorityTextBox"/>
                </StackPanel>
                <StackPanel Orientation="Vertical"
                            Width="160" Margin="45 0 0 0">
                    <TextBlock Text="Модем *"/>
                    <ComboBox x:Name="ModemComboBox"/>
                </StackPanel>
            </StackPanel>

            <StackPanel Orientation="Horizontal"
                        Margin="0 10 0 0">
                <StackPanel Orientation="Vertical"
                            Width="570" Margin="5 0">
                    <TextBlock Text="Примечания"/>
                    <TextBox AcceptsReturn="True"
                             TextWrapping="Wrap"
                             x:Name="NotesTextBox"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="2"
                    Margin="10 0">
            <Button x:Name="ButtonCreateMachine"
                    Content="Создать" Background="Blue"
                    Foreground="White"
                    Width="100" Height="25"
                    Click="ButtonCreateMachine_Click"/>
            <Button x:Name="ButtonCancel"
                    Content="Отменить" Margin="10 0"
                    Foreground="Black" Background="White"
                    Width="100" Height="25"
                    Click="ButtonCancel_Click"/>
        </StackPanel>
    </Grid>
</Page>
