<Window x:Class="VendingMachines.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VendingMachines.Desktop"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="ООО Торговые Автоматы" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Background="Black">
            <Label Content="ООО Торговые Автоматы" 
                   Foreground="White"
                   FontSize="24" VerticalAlignment="Center"
                   HorizontalContentAlignment="Center"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Vertical"
                    Margin="50" Width="350">
            <Label Content="Вход в систему" FontSize="18"
                   HorizontalContentAlignment="Center"/>
            <StackPanel Orientation="Vertical" Margin="0 5">
                <Label Content="Email" FontSize="15"/>
                <TextBox x:Name="EmailTextBox" Height="25"
                         HorizontalContentAlignment="Left"
                         FontSize="15"/>
                <TextBlock x:Name="ErrorEmailTextBlock"
                           Foreground="Red"/>
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <Label Content="Пароль" FontSize="15"/>
                <PasswordBox x:Name="PasswordTextBox" Height="25"
                             HorizontalContentAlignment="Left"
                             FontSize="15"/>
                <TextBlock x:Name="ErrorPasswordTextBlock"
                           Foreground="Red"/>
            </StackPanel>
            <Button Content="Войти в систему" Width="200"
                    x:Name="ButtonEnter" FontSize="15"
                    Click="ButtonEnter_Click" Height="30"
                    Margin="15" Background="Blue"
                    Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
